; ==========================================================
; Breakpoints for the Picture and Breakpoints Modules
; ==========================================================
; Pictures 2.0 requires the breakpoints be set from the
; "largest" (e.g. wide) to the "smallest" (e.g. mobile)
;
; Huge devices, basically televisions
breakpoints[screen-TV] = only screen and (min-width: 3450px)
; Extra large devices, very big monitors
breakpoints[screen-XL] = only screen and (min-width: 1600px)
; Large devices (desktops and large monitors 1050 and up)
breakpoints[screen-LD] = only screen and (min-width: 1051px)
; Medium devices (tablets in landscape and small desktop monitors)
breakpoints[screen-MD] = only screen and (min-width: 701px)
; Small devicess (generally tablets in portrait mode)
breakpoints[screen-SM] = only screen and (min-width: 481px)
; Phone Landscape (cell phones in landscape mode)
breakpoints[screen-CL] = only screen and (min-width: 321px)
; Extra small devices (cell phones in portrait mode)
breakpoints[screen-XS] = only screen and (min-width: 0px)
